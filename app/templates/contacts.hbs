{{page-title "Contacts"}}
<div class="card">
  <div class="card-header bg-primary text-light">
    Contacts
  </div>
  <div class="card-body">
    <table class="table">
      {{#each @model.Contacts as |contact|}}
        <tr class="animate-repeat ng-scope">
            <td class="ng-binding">{{contact.nom}}</td>
            <td class="ng-binding">{{contact.prenom}}</td>
            <td class="ng-binding">{{contact.email}}</td>
            <td class="ng-binding"><button class="btn btn-danger btn-xs" {{action "delete" contact}}></button></td>
        </tr>
      {{/each}}
      <tr class="animate-repeat ng-scope">
        {{#if @model.deletedsCount}}
          <td><button class="btn btn-outline-danger">{{plurial @model.deletedsCount}}</button></td>
        {{/if}}
      </tr>
    </table>
  </div>
</div>
{{outlet}}