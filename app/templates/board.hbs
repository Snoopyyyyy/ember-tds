{{page-title "Board"}}
<div class="ui basic inverted violet segment temp">
  <div class="ui secondary menu">
    <div class="ui right item">
      <button {{action "logout"}} class="ui primary button ali">Déconnection</button>
    </div>
  </div>
</div>
<div class="ui basic inverted black segment temp">
  <div class="ui secondary menu">
    <div class="ui item">
      <h1 class="ui grey inverted header">Board</h1>
    </div>
    <div class="ui right item">
      <button {{action "goStore"}} class="ui positive button ">Gérer le store</button>
    </div>
  </div>
</div>

<div class="ui container segment bglight">
  <h1>Commande</h1>
  <table class="ui celled table">
    <thead>
      <tr>
        <th>Client</th>
        <th>Date de Commande</th>
        <th>Statut</th>
        <th class="center aligned">Nombre de colis</th>
        <th class="center aligned">A payé</th>
        <th class="center aligned">Quantité</th>
        <th class="center aligned">Quantité manquant</th>
      </tr>
    </thead>
    <tbody>
    {{#each @model as |val|}}
      <tr>
        <td>{{val.user.name}}</td>
        <td>{{moment-format val.dateCreation 'LLLL'}}</td>
        <td>{{val.status}}</td>
        <td class="center aligned">{{val.amount}}</td>
        <td class="center aligned">{{val.toPay}}</td>
        <td class="center aligned">{{val.itemsNumber}}</td>
        <td class="center aligned">{{val.missingNumber}}</td>
      </tr>
    {{/each}}
    </tbody>
  </table>
</div>

{{outlet}}